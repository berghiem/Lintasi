<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/back"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/mm"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/farm_daylight"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        android:alpha="0.4"
                        />

                    <ImageView
                        android:layout_width="@dimen/_300sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:scaleType="fitStart"
                        android:src="@drawable/farm_awan"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal|center_vertical"/>
                </FrameLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:scaleType="fitCenter"
                android:visibility="visible">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/prev"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/farmBawah"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/farm_bawah_2"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/next"
                    android:background="@color/shadow" />


            </LinearLayout>
            <ImageView
                android:id="@+id/fruitImage"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_160sdp"
                android:layout_weight="0"
                android:gravity="bottom"
                android:scaleType="fitCenter"
                android:src="@drawable/f_alpukat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <com.google.android.gms.ads.AdView
                    android:id="@+id/adFarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_kebun" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="55dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/i_home"
                    android:text="mode"
                    android:tooltipText="mode"
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/i_pinmap"
                    android:text="mode"
                    android:tooltipText="mode"
                    android:visibility="visible" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/autoplay"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/autoplayoff"
                    android:tooltipText="autoplay" />

                <ImageView
                    android:id="@+id/sound"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/audio"
                    android:text="mode"
                    android:tooltipText="mode"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|center_horizontal"
                    android:gravity="top|center_horizontal"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:fontFamily="@font/fredoka_one"
                    android:lineSpacingExtra="0dp"
                    android:lineSpacingMultiplier="0.9"
                    android:text="alpukat"
                    android:id="@+id/fruitName"
                    android:visibility="visible"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_51sdp" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>





            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/_15sdp"
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center_horizontal"
                android:padding="0dp">

                <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tracklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"/>

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>




</LinearLayout>