<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    android:layout_marginHorizontal="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/quicksand"
            android:id="@+id/name"
            android:text="Bulan"/>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            >

            <ImageView
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="25dp"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:src="@drawable/girlr"
                android:id="@+id/imageCh"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:visibility="gone">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/quicksand"
                    android:id="@+id/skill1"
                    android:text="Ketekunan"
                    android:textColor="@color/colorAccent"/>

                <ImageView
                    android:id="@+id/skill1Value"
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/rounded_pink" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/quicksand"
                    android:text="Kecerdasan"
                    android:id="@+id/skill2"
                    android:textColor="@color/green"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="8dp"
                    android:src="@drawable/rounded_green"
                    android:id="@+id/skill2value"
                    />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/pilih"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/rounded_gold_solid2"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="7dp"
            android:text="Pilih Bulan"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="visible" />

    </LinearLayout>


</androidx.cardview.widget.CardView>