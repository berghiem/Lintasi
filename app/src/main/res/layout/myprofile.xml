<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_frame"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blue_frame">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/home"
                android:layout_width="@dimen/control"
                android:layout_height="@dimen/control"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/i_home"
                android:text="mode"
                android:tooltipText="mode"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/map"
                android:layout_width="@dimen/control"
                android:layout_height="@dimen/control"
                android:layout_gravity="center"
                android:src="@drawable/i_pinmap"
                android:text="mode"
                android:tooltipText="mode"
                android:visibility="visible" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="40sp"
            android:fontFamily="@font/fredoka_one"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/frame_white"
                android:layout_margin="10dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/profile_image"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp">
            <com.google.android.gms.ads.AdView
                android:id="@+id/adMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_map">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>


        <TextView
            android:id="@+id/pilih"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_gold_solid"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="7dp"
            android:text="Ganti karakter"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:visibility="visible"
            android:layout_gravity="bottom|center_horizontal"
            />

    </LinearLayout>
</ScrollView>