<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/back"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/zooBg"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/skygradient">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:layout_gravity="top"
                android:id="@+id/bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                   </FrameLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:scaleType="fitCenter"
                android:visibility="visible">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/prev"
                    android:layout_weight="1" />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/next"
                    android:background="@color/shadow" />


            </LinearLayout>
            <!--ImageView
                android:id="@+id/seasonalImage"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_250sdp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_100sdp"
                android:layout_weight="0"
                android:gravity="bottom"
                android:scaleType="fitCenter"
                android:src="@drawable/in_bendera" /-->


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp"
                android:scaleType="fitEnd"
                android:src="@drawable/in_bendera"
                android:id="@+id/mediumAnimal"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/_70sdp"
                android:layout_gravity="center_horizontal|bottom"

                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingRight="@dimen/_20sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <com.google.android.gms.ads.AdView
                    android:id="@+id/adFarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_kebun" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="55dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/i_home"
                    android:text="mode"
                    android:tooltipText="mode"
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/i_pinmap"
                    android:text="mode"
                    android:tooltipText="mode"
                    android:visibility="visible" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/autoplay"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/autoplayoff"
                    android:tooltipText="autoplay" />

                <ImageView
                    android:id="@+id/sound"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/audio"
                    android:text="mode"
                    android:tooltipText="mode"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|center_horizontal"
                    android:gravity="top|center_horizontal"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:fontFamily="@font/fredoka_one"
                    android:lineSpacingExtra="0dp"
                    android:lineSpacingMultiplier="0.9"
                    android:text="bendera"
                    android:id="@+id/seasonalName"
                    android:visibility="visible"
                    android:textColor="@color/blueag"
                    android:textSize="@dimen/_28sdp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>





            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/_15sdp"
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center_horizontal"
                android:padding="0dp">

                <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tracklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"/>

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>




</LinearLayout>