<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:src="@drawable/i_home"
                android:text="mode"
                android:tooltipText="mode"
                android:visibility="visible"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/map"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:src="@drawable/i_pinmap"
                android:text="mode"
                android:tooltipText="mode"
                android:visibility="visible" />

        </LinearLayout>


        <ImageView
            android:id="@+id/rid"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/bfarm"
            android:scaleType="centerInside"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/quicksand_bold"
            android:id="@+id/namaTempat"
            android:text="Kebun Binatang"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/quicksand"
            android:gravity="center_vertical"
            android:lineSpacingExtra="10dp"
            android:text="@string/bonbin"
            android:textAlignment="center"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <com.google.android.gms.ads.AdView
                android:id="@+id/adBrief"
                ads:adSize="MEDIUM_RECTANGLE"
                ads:adUnitId="@string/banner_brief_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </LinearLayout>


        <TextView
            android:id="@+id/visit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/roundedred"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="bottom"
            android:paddingLeft="40dp"
            android:paddingTop="8dp"
            android:paddingRight="40dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Kunjungi"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:visibility="visible" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>